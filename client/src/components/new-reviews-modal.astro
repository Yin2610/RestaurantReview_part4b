<div class="modal fade" id="newReviewModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body px-5">
                <!-- All input to be sent to server, and buttons must be within the 'form' tag -->
                <form id="commentForm">
                    <div class="row text-center">
                        <div class="col-md-11 my-2">
                            <h5>Your review is deeply appreciated by us !!!</h5>
                        </div>
                        <div class="col-md-1 mb-4">
                            <button type="button" class="border-0 bg-light" data-dismiss="modal">
                                <span style="font-size: 30px;">&times;</span>
                            </button>
                        </div>      
                    </div>
                    <div id="commentBody">
                        <div>
                            <label>Rating:</label>
                            <img src="images/websiteImages/white_star.png" id="star" class="star" width="18px" height="18px" data-value="0" style="display: none;"/>
                            <img src="images/websiteImages/white_star.png" class="star" width="18px" height="18px" data-value="1" onmouseover="rateIt(this)" />
                            <img src="images/websiteImages/white_star.png" class="star" width="18px" height="18px" data-value="2" onmouseover="rateIt(this)" />
                            <img src="images/websiteImages/white_star.png" class="star" width="18px" height="18px" data-value="3" onmouseover="rateIt(this)" />
                            <img src="images/websiteImages/white_star.png" class="star" width="18px" height="18px" data-value="4" onmouseover="rateIt(this)" />
                            <img src="images/websiteImages/white_star.png" class="star" width="18px" height="18px" data-value="5" onmouseover="rateIt(this)" />
                        </div>
                        <div>
                            <label>Price: &nbsp;&nbsp;</label>
                            <img src="images/websiteImages/white_dollar_sign.png" id="dollar" class="dollar" width="18px" height="18px" data-value="0" style="display: none;"/>
                            <img src="images/websiteImages/white_dollar_sign.png" class="dollar" width="18px" height="18px" data-value="1" onmouseover="rateIt(this)" />
                            <img src="images/websiteImages/white_dollar_sign.png" class="dollar" width="18px" height="18px" data-value="2" onmouseover="rateIt(this)" />
                            <img src="images/websiteImages/white_dollar_sign.png" class="dollar" width="18px" height="18px" data-value="3" onmouseover="rateIt(this)" />
                            <img src="images/websiteImages/white_dollar_sign.png" class="dollar" width="18px" height="18px" data-value="4" onmouseover="rateIt(this)" />
                            <img src="images/websiteImages/white_dollar_sign.png" class="dollar" width="18px" height="18px" data-value="5" onmouseover="rateIt(this)" />
                        </div>
                        <label for="title">Title</label>
                        <input type="text" id="title" required class="form-control">
                        <label for="comment">Comment</label>
                        <textarea id="comment" required class="form-control form-rounded" rows="3" cols="100%"></textarea>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning text-white mx-auto" data-dismiss="modal" onclick="addReview()">Submit review</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


